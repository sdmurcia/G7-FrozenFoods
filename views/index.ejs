<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/estructura.css">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Home</title>
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@1,300&display=swap" rel="stylesheet">
</head>
<body class="estilo-body">
    <!-- Header -->
    <%- include('partials/header') %>
    <main>
        <div class="banner-container">
            <img src="./images/banner-2.jpg" alt="banner" class="banner">
        </div>


        <h2 class="titular">Productos destacados</h2>
        <section class="seccion-productos">
         <% for (const producto of visitados){%>
            <article class="producto">
                <img src="/images/products/<%=producto.image %>" alt="albondigas">
                <p class="description"> <%= producto.producto %></p>
                <p class="precio">$<%= producto.precio %></p>
                <a href="/product/detalle/<%= producto.id %>">
                    <button type="button">Detalles <br>y mas</button>
                </a>
                <a href="/product/carrito">
                    <button type="button">Agregar <br> <i class="fa-solid fa-plus"></i></button>
                </a>
            </article>

        <%}%>
            
        </section>
        
        <h2 class="titular">Ofertas</h2>
        <section class="seccion-productos">
            <% for (const producto of enOferta){%>
                <article class="producto">
                    <img src="/images/products/<%=producto.image %>" alt="albondigas">
                    <p class="description"> <%= producto.producto %></p>
                    <p class="precio">$<%= producto.precio-(producto.precio*(producto.descuento/100)) %> <strike><%= producto.precio %></strike></p>
                    <a href="/product/detalle/<%= producto.id %>">
                        <button type="button">Detalles <br>y mas</button>
                    </a>
                    <a href="/product/carrito">
                        <button type="button">Agregar <br> <i class="fa-solid fa-plus"></i></button>
                    </a>
                </article>
    
            <%}%>

                     
          
        </section>

    </main>
    <!-- Footer -->
    <%- include('partials/footer') %>
</body>
</html>